<resources>
    <!-- Base application theme. -->
    <style name="Theme.Demo.Default" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/demo_black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/demo_black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <item name="android:windowAnimationStyle">@style/DemoActivityFadeAnimation</item>


        <!-- Dimensions declarations associated with Attrs entries -->
        <item name="demo_margin_padding_tiny">@dimen/demo_margin_padding_tiny</item>
        <item name="demo_margin_padding_small">@dimen/demo_margin_padding_small</item>
        <item name="demo_margin_padding_medium">@dimen/demo_margin_padding_medium</item>
        <item name="demo_margin_padding_large">@dimen/demo_margin_padding_large</item>
        <item name="demo_margin_padding_xlarge">@dimen/demo_margin_padding_xlarge</item>
        <item name="demo_margin_padding_xxlarge">@dimen/demo_margin_padding_xxlarge</item>

        <item name="demo_text_size_micro">@dimen/demo_text_size_micro</item>
        <item name="demo_text_size_small">@dimen/demo_text_size_small</item>
        <item name="demo_text_size_medium">@dimen/demo_text_size_medium</item>
        <item name="demo_text_size_large">@dimen/demo_text_size_large</item>
        <item name="demo_text_size_xlarge">@dimen/demo_text_size_xlarge</item>
        <item name="demo_text_size_xxlarge">@dimen/demo_text_size_xxlarge</item>
        <item name="demo_text_size_xxxlarge">@dimen/demo_text_size_xxxlarge</item>

        <!-- Color associated with Attrs entries  -->
        <item name="demo_color_white">@color/demo_white</item>
        <item name="demo_color_black">@color/demo_black</item>

        <!-- Anims associated with Attrs entries  -->
        <item name="demo_fade_in_anim">@anim/fade_in</item>
        <item name="demo_fade_out_anim">@anim/fade_out</item>
        <item name="demo_slide_in_left_anim">@anim/slide_in_left</item>
        <item name="demo_slide_in_right_anim">@anim/slide_in_right</item>
        <item name="demo_slide_out_left_anim">@anim/slide_out_left</item>
        <item name="demo_slide_out_right_anim">@anim/slide_out_right</item>

    </style>


    <style name="DemoActivityFadeAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="Theme.Demo.Default.Text" parent="Theme.Demo.Default" >
        <item name="android:textColor">@color/demo_black</item>
    </style>

    <style name="Theme.Demo.Default.Text.Title" parent="Theme.Demo.Default.Text">
        <item name="android:textSize">@dimen/demo_text_size_large</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Theme.Demo.Default.Text.Fine" parent="Theme.Demo.Default.Text">
        <item name="android:textSize">@dimen/demo_text_size_micro</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

</resources>